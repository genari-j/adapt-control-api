{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "./src",
		"paths": {
			"~/@types/*": ["@types/*"],
			"~/config/*": ["config/*"],
			"~/controllers/*": ["controllers/*"],
			"~/helpers/*": ["helpers/*"],
			"~/middlewares/*": ["middlewares/*"],
			"~/models/interfaces/*": ["models/interfaces/*"],
			"~/models/repositories/*": ["models/repositories/*"],
			"~/services/emails/*": ["services/emails/*"],
			"~/routes/*": ["routes/*"],
			"~/validators/*": ["validators/*"]
		}
	}
}
